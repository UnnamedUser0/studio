datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?
  isAdmin       Boolean   @default(false)
  permissions   String? // JSON string of permissions
  lastActiveAt  DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts Account[]
  sessions Session[]
  reviews  Review[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Pizzeria {
  id          String   @id
  name        String
  address     String
  lat         Float
  lng         Float
  imageUrl    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  phoneNumber String?
  website     String?
  socialMedia String?
  schedule    String?
  description String?

  reviews Review[]
  items   MenuItem[]
}

model MenuItem {
  id          String   @id @default(cuid())
  name        String
  description String?
  price       Float
  imageUrl    String?
  category    String?
  pizzeriaId  String
  pizzeria    Pizzeria @relation(fields: [pizzeriaId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  legend      String?
}

model FooterConfig {
  id            String   @id @default(cuid())
  copyrightText String
  footerSize    String   @default("medium")
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model SocialLink {
  id        String   @id @default(cuid())
  platform  String
  iconName  String
  href      String
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Testimonial {
  id        Int       @id @default(autoincrement())
  name      String
  email     String?
  role      String?
  content   String
  avatarUrl String?
  createdAt DateTime  @default(now())
  replyText String?
  repliedAt DateTime?
}

model GlobalSettings {
  key   String @id
  value String
}

model Review {
  id         Int       @id @default(autoincrement())
  rating     Int
  comment    String?
  userId     String
  pizzeriaId String
  createdAt  DateTime  @default(now())
  replyText  String?
  repliedAt  DateTime?

  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  pizzeria Pizzeria @relation(fields: [pizzeriaId], references: [id], onDelete: Cascade)
}

model FeatureCard {
  id          String   @id @default(cuid())
  title       String
  description String
  iconName    String
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model FaqCategory {
  id        String        @id @default(cuid())
  title     String
  iconName  String
  order     Int           @default(0)
  questions FaqQuestion[]
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
}

model FaqQuestion {
  id         String      @id @default(cuid())
  question   String
  answer     String
  categoryId String
  category   FaqCategory @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  order      Int         @default(0)
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
}

model HelpCenterCard {
  id          String   @id @default(cuid())
  title       String
  description String
  iconName    String
  buttonText  String
  link        String
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model FooterSection {
  id        String       @id @default(cuid())
  title     String
  order     Int          @default(0)
  links     FooterLink[]
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
}

model FooterLink {
  id        String        @id @default(cuid())
  label     String
  href      String
  sectionId String
  section   FooterSection @relation(fields: [sectionId], references: [id], onDelete: Cascade)
  order     Int           @default(0)
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
}

model AboutContent {
  id                 String   @id @default(cuid())
  termsTitle         String   @default("Términos de Uso")
  termsDescription   String   @default("Bienvenido a PizzApp. Al usar nuestra aplicación, aceptas respetar a la comunidad y compartir información verídica.")
  termsPoints        String   @default("No publicar contenido ofensivo.|Respetar las opiniones de otros usuarios.|El uso indebido de la plataforma resultará en la suspensión de la cuenta.")
  privacyTitle       String   @default("Política de Privacidad")
  privacyDescription String   @default("En PizzApp nos tomamos tu privacidad en serio.")
  privacyPoints      String   @default("Solo recopilamos la información necesaria para mejorar tu experiencia.|No compartimos tus datos personales con terceros sin tu consentimiento.|Puedes solicitar la eliminación de tus datos en cualquier momento.")
  appVersion         String   @default("PizzApp v1.0.0")
  copyrightText      String   @default("© 2024 PizzApp Inc.")
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}
